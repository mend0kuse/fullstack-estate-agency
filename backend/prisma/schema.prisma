generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  status    String

  clientId Int?
  client   User? @relation(fields: [clientId], references: [id], name: "client" )

  managerId Int?
  manager   User? @relation(fields: [managerId], references: [id], name: "manager")

  apartmentId Int?
  apartment   Apartment? @relation(fields: [apartmentId], references: [id])
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  role      String
  password  String
  apartment Apartment[]
  profile   Profile?

  clientOrders  Order[] @relation(name: "client")
  managerOrders Order[] @relation(name: "manager")
}

model Profile {
  id      Int     @id @default(autoincrement())
  userId  Int?    @unique
  name    String?
  age     String?
  avatar  String?
  country String?
  user    User?   @relation(fields: [userId], references: [id])
}

model Apartment {
  id               Int                      @id @default(autoincrement())
  createdAt        DateTime                 @default(now())
  title            String
  address          String
  description      String
  views            Int
  price            Int
  prepayment       Int
  pledge           Int
  communalIncluded Boolean
  userId           Int?
  user             User?                    @relation(fields: [userId], references: [id])
  characteristic   ApartmentCharacteristic?
  images           Image[]

  orders Order[]

  @@index([userId], map: "Apartment_userId_fkey")
}

model Image {
  id          Int        @id @default(autoincrement())
  src         String
  apartmentId Int?
  apartment   Apartment? @relation(fields: [apartmentId], references: [id])

  @@index([apartmentId], map: "Image_apartmentId_fkey")
}

model ApartmentCharacteristic {
  id          Int        @id @default(autoincrement())
  square      String
  kitchen     String
  live        String
  year        String
  floor       String
  apartmentId Int?       @unique
  apartment   Apartment? @relation(fields: [apartmentId], references: [id])
}
